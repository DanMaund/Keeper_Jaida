<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#2f2f2f"

android:paddingBottom="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="com.example.jada.keeper_2.UserManualEntry">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2.5"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/enter_first_name"
        android:text=""
        android:hint="FIRST NAME"
        android:layout_weight="1.2"
        android:singleLine="true"
        android:paddingLeft="8dp"
        android:background="#FFFFFF"
        android:gravity="left|center_vertical"/>

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="0.1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/enter_last_name"
        android:text=""
        android:hint="LAST NAME"
        android:layout_weight="1.2"
        android:singleLine="true"
        android:background="#FFFFFF"
        android:paddingLeft="8dp"
        android:gravity="left|center_vertical"/>

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="0.1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/enter_nickname"
        android:text=""
        android:hint="NICKNAME"
        android:layout_weight="1.2"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:background="#FFFFFF"
        android:gravity="left|center_vertical"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="@string/add_to_group"
            android:gravity="left|center_vertical"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_weight="0.2"/>

        <Spinner
            android:id="@+id/add_to_group_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.2"
            android:background="#474747"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <Button
        android:id="@+id/manualEntryAddUser"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Add"
        android:layout_weight="1"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2.5"/>

</LinearLayout>